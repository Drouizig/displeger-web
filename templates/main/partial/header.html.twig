<header class="fixed-top">

  <nav class="navbar navbar-expand-lg">

      <a href="{{ path('main') }}"><h1>{{ 'app.title'|trans }}</h1></a>
      {% include 'main/partial/search_form.html.twig' %}

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <i class="fas fa-bars"></i>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="{{path('search_advanced')}}">{{'app.search.advanced'|trans}}</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{path('main')}}">{{'app.home'|trans}}</a>
        </li>

      </ul>

      {% macro lang_link(locale) %}
          {{path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': locale}))}}
      {% endmacro %}

      {%import _self as self %}



      <div class="my-2 my-lg-0">
        <div class="custom-switch navbar-nav">
          <input class="dark-mode-switch custom-control-input" id="dark-theme-switch" type="checkbox">
          <label class="custom-control-label mx-4" for="dark-theme-switch">{{ 'app.dark_mode.activate' | trans }}</label>
          <a class="mx-1" href="{{self.lang_link('br')}}">BR</a>
          <a class="mx-1" href="{{self.lang_link('fr')}}">FR</a>
          <a class="mx-1" href="{{self.lang_link('en')}}">EN</a>
        </div>
      </div>
    </div>
  </nav>
</header>
