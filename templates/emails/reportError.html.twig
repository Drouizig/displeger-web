<div class="row report_error">

    <div class="col-md">
        <div class="report_error_notice row">
            <div class="col-md">
                {{ 'app.report_error.notice'|trans }}
            </div>
        </div>
        <div class="row">
            <div class="col-md">
                {% form_theme contactForm 'bootstrap_4_layout.html.twig' %}
                <div class="report_error_form">
                    {{form_start(contactForm, {
                        'action' : path('mail'),
                        'attr' : {'class': 'js-contact-form'}
                    })}}
                    <div class="row">
                        <div class="col-md-2">
                            {{form_label(contactForm.name)}}
                        </div><div class="col-md">
                            {{form_widget(contactForm.name)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            {{form_label(contactForm.email)}}
                        </div><div class="col-md">
                            {{form_widget(contactForm.email)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            {{form_label(contactForm.message)}}
                        </div><div class="col-md">
                            {{form_widget(
                                contactForm.message,
                                {'value': ('app.form.contact.report_error.translation')|trans({'%verb%': verb.anvVerb})}
                            )
                            }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md">
                            {{form_widget(contactForm.submit)}}
                        </div>
                    </div>
                    {{form_widget(contactForm._token)}}
                    {{form_end(contactForm)}}
                </div>
            </div>
        </div>
    </div>
</div>