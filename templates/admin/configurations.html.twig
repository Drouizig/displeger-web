{% extends 'admin/base_admin.html.twig' %}

{% block title %}Lodenn vera単{% endblock %}

{% block content %}
    <h1>{{ 'app.title'|trans }}</h1>
    <p><a href="{{ path('admin_home') }}">Lodenn vera単</a></p>

    <form action="{{ path('admin_configurations') }}" class="search-form form-md form-inline">
        <input type="text" name="search" class="form-control" value="{{ app.request.query.get('search') }}"/>
        <button class="btn btn-primary">{{'app.header.search.button'|trans}}</button>
    </form>
    <a href="{{ path('admin_configuration') }}" class="btn btn-primary">Ouzhpenna単 ur c'hefluniadur</a>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
    <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">
                    Bonneg
                </th>
                <th>
                </th>
            </tr>
            </thead><tbody>
            {% for configuration in pagination %}
                <tr>
                    <td>
                        {{configuration.code}}
                    </td>
                    <td>
                        <a href="{{path('admin_configuration', {'id': configuration.id, 'params': pagination.params, 'offset' : offset + loop.index})}}">Kemma単</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
