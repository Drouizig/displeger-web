<div>
    <div class="row">
        <div class="col-md-2">
            {{form_label(localization.infinitive)}}
        </div>
        <div class="col-md-2">
            {{form_label(localization.base)}}
        </div>
        <div class="col-md-2">
            {{form_label(localization.category)}}
        </div>
        <div class="col-md-2">
            {{form_label(localization.dialectCode)}}
        </div>
        <div class="col-md">
            {{form_label(localization.sources)}}
        </div>
        {% if localization.gouMutation is defined %}
            <div class="col-md-1">
                {{form_label(localization.gouMutation)}}
            </div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-md-2">
            {{form_widget(localization.infinitive)}}
        </div>
        <div class="col-md-2">
            {{form_widget(localization.base)}}
        </div>
        <div class="col-md-2">
            {{form_widget(localization.category)}}
        </div>
        <div class="col-md-2">
            {{form_widget(localization.dialectCode)}}
        </div>
        <div class="col-md">
            {{form_widget(localization.sources)}}
        </div>
        {% if localization.gouMutation is defined %}
            <div class="col-md-1">
                {{form_widget(localization.gouMutation)}}
            </div>
        {% endif %}
        <div class="col-md-1">
            <button type="button"
                    class="btn btn-primary delete-element">
                    <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
</div>